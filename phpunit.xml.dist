<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true" beStrictAboutTestsThatDoNotTestAnything="true" beStrictAboutOutputDuringTests="true">
    <testsuites>
        <testsuite name="ContentVote Unit">
            <directory>tests/php</directory>
