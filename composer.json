{
	"name": "persoderlind/content-poll",
	"description": "ContentPoll AI – AI-assisted contextual polls (2–6 options) for engaging readers directly on content pages.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": "^8.3",
		"yahnis-elsts/plugin-update-checker": "^5.6"
	},
	"autoload": {
		"psr-4": {
			"ContentPoll\\": "src/php/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^10.5",
		"squizlabs/php_codesniffer": "^3.9"
	},
	"scripts": {
		"test": "phpunit",
		"lint": "phpcs --standard=WordPress --ignore=vendor src/php"
	}
}