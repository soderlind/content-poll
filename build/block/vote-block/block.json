{
  "apiVersion": 3,
  "name": "content-poll/vote-block",
  "title": "ContentPoll AI",
  "description": "Allow visitors to cast a single vote on a question with 2–6 options.",
  "category": "widgets",
  "icon": {
    "src": "chart-bar",
    "background": "#1e1e2f",
    "foreground": "#ffffff"
  },
  "textdomain": "content-poll",
  "supports": {
    "html": false
  },
  "attributes": {
    "blockId": {
      "type": "string"
    },
    "question": {
      "type": "string",
      "default": "What do you most enjoy on a relaxed weekend?"
    },
    "options": {
      "type": "array",
      "default": [
        "Exploring a new trail",
        "Reading a good book",
        "Cooking something new",
        "Binge‑watching a series"
      ]
    }
  },
  "editorScript": "file:./index.js",
  "viewScript": "file:./vote-submit.js",
  "style": "file:./style-index.css"
}